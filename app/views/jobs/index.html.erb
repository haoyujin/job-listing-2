<div class="pull-right" >
  
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%=link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= link_to("编辑", edit_job_path(job)) %>
      <%= link_to("删除", job_path(job), :method => :delete, :data => {:confirm => "你确定这样做吗？"}) %>
    </td>
    <td>
      <%=job.created_at %>
    </td>

  </tr>
  <% end %>
</table>
